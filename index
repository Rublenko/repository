<!DOCTYPE html>
<html lang="uk">
<head>
  <meta charset="UTF-8" />
  <title>Геолокаційний Tableau Дашборд</title>
  <script src="https://code.jquery.com/jquery-3.1.0.js"></script>
  <script src="https://public.tableau.com/javascripts/api/tableau-2.min.js"></script>
  <style>
    body { font-family: Arial, sans-serif; margin: 20px; }
    #address { font-size: 1.2em; margin-bottom: 10px; }
    #vizContainer { width: 100%; height: 800px; border: 1px solid #ccc; }
  </style>
</head>
<body>

<h2>Геолокаційний дашборд</h2>
<div id="address">Визначення місцезнаходження...</div>
<hr/>

<div id="vizContainer"></div>

<script>
  $(document).ready(function() {

    // Функція для ініціалізації Tableau після отримання координат
    function initTableauViz(lat, lon) {
      $("#address").text(`Ваші координати: широта ${lat.toFixed(4)}, довгота ${lon.toFixed(4)}`);

      const containerDiv = document.getElementById("vizContainer");
      const url = "https://public.tableau.com/views/experement_17519918234750/Sheet2";

      const options = {
        hideTabs: true,
        hideToolbar: false,
        onFirstInteractive: function () {
          // Передаємо параметри Latitude та Longitude (потрібно щоб такі параметри були у Tableau)
          viz.getWorkbook().changeParameterValueAsync("Latitude", lat.toString());
          viz.getWorkbook().changeParameterValueAsync("Longitude", lon.toString());
        }
      };

      const viz = new tableau.Viz(containerDiv, url, options);
    }

    // Отримуємо координати через HTML5 Geolocation API
    if (navigator.geolocation) {
      navigator.geolocation.getCurrentPosition(function(position) {
        const lat = position.coords.latitude;
        const lon = position.coords.longitude;
        initTableauViz(lat, lon);
      }, function(error) {
        $("#address").text("Не вдалося визначити координати користувача: " + error.message);
      });
    } else {
      $("#address").text("Геолокація не підтримується вашим браузером.");
    }

  });
</script>

</body>
</html>
